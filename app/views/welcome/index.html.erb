<div>
  <h2>Leader Board</h2>
  <table >
    <tr>
      <th>Place</th>
      <th>Player</th>
      <th>Wins</th>
    </tr>
    <% @leaderboard.each_with_index do |player, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td>
          <a href='/players/<%= player.id %>'>
            <%= player.name %>
          </a>
        </td>
        <td><%= player.wins.count %></td>
      </tr>
    <% end %>
  </table>
</div>
